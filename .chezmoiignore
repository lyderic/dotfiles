{{/*
We check the 'workstation' variable in the config file 
(~/.config/chezmoi/chezmoi.yaml).
If a this variable is not found, if it is set to false,
or if the config file doesn't exist, then we write these files:
- ~/.workstation
- ~/.gnupg/gpg-agent.conf
Therefore, to have these dotfiles deployed on a workstation,
create the file '~/.config/chezmoi/chezmoi.yaml' with the following
content:
data:
  workstation: true

*/}}
{{ chezmoi:template:missing-key=zero }}
{{- with .workstation -}}
{{- else -}}
{{- print ".workstation\n" -}}
{{- print ".gnupg/gpg-agent.conf\n" -}}
{{- print ".gnupg/gpg.conf\n" -}}
{{- end -}}
{{/* Autogenerated .vim files are always ignored */}}
{{- print ".vim/.netrwhist\n" -}}
{{- print ".vim/spell/fr.utf-8.add.spl\n" -}}
{{- print ".vim/spell/fr.utf-8.add\n" -}}
