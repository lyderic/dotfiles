{{/*
The following files are only to be deployed if there is an a gpg key:
- ~/.gnupg/gpg.conf (template)
- ~/.gnupg/gpg-agent.conf
To achieve this, we set up gpg encryption on the host workstation
machine.
If 'encryption' is not set as 'gpg and the 'gpg' > 'recipient'
variable is not found, (or if the config file doesn't exist), then we
write these following files, i.e. they are NOT ignored.
Therefore, to have these dotfiles deployed on a machine,
create the file '~/.config/chezmoi/chezmoi.yaml' with the
following content:
-----8<-----
encryption: gpg
gpg:
  recipient: "XXXXXXXX"
----->8-----
*/}}

{{ chezmoi:template:missing-key=zero }}
{{- if eq .chezmoi.config.encryption "gpg" -}}
{{- else -}}
{{- print ".gnupg/gpg-agent.conf\n" -}}
{{- print ".gnupg/gpg.conf\n" -}}
{{- end -}}
{{/* justfile modules according to distros */}}
{{- if eq .chezmoi.osRelease.id "arch" -}}
{{- print ".justfile.d/ubuntu.just\n" -}}
{{- print ".justfile.d/alpine.just\n" -}}
{{- end -}}
{{- if eq .chezmoi.osRelease.id "ubuntu" -}}
{{- print ".justfile.d/arch.just\n" -}}
{{- print ".justfile.d/alpine.just\n" -}}
{{- end -}}
{{- if eq .chezmoi.osRelease.id "alpine" -}}
{{- print ".justfile.d/arch.just\n" -}}
{{- print ".justfile.d/ubuntu.just\n" -}}
{{- end -}}
{{/* Autogenerated .vim files are always ignored */}}
{{- print ".vim/.netrwhist\n" -}}
{{- print ".vim/spell/fr.utf-8.add.spl\n" -}}
{{- print ".vim/spell/fr.utf-8.add\n" -}}
